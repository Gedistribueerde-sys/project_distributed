<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.StartupController"
      alignment="CENTER" spacing="16" prefWidth="400" prefHeight="500"
      styleClass="root" stylesheets="@styles.css">
    <padding>
        <Insets top="48" right="48" bottom="48" left="48"/>
    </padding>

    <!-- App Logo/Icon -->
    <Label text="ðŸ’¬" style="-fx-font-size: 72px;"/>

    <!-- App Name -->
    <VBox alignment="CENTER" spacing="8">
        <Label text="SecureChat" styleClass="title-label" style="-fx-font-size: 32px;"/>
        <Label text="End-to-end encrypted messaging" styleClass="hint-label" style="-fx-font-size: 14px;"/>
    </VBox>

    <Region prefHeight="32"/>

    <!-- Action Buttons -->
    <VBox spacing="12" alignment="CENTER" maxWidth="280">
        <Button text="Sign In" onAction="#handleLoginButtonAction"
                maxWidth="Infinity" prefHeight="48"/>
        <Button text="Create Account" onAction="#handleRegisterButtonAction"
                maxWidth="Infinity" prefHeight="48"
                style="-fx-background-color: transparent; -fx-border-color: #5865F2; -fx-border-width: 2; -fx-border-radius: 6; -fx-text-fill: #5865F2;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- Footer -->
    <Label text="ðŸ”’ Your messages are secure" styleClass="hint-label"/>
</VBox>


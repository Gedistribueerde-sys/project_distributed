<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="16" styleClass="root"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="48.0" right="48.0" top="40.0"/>
    </padding>
    <children>
        <!-- Header -->
        <VBox alignment="CENTER" spacing="8">
            <ImageView fx:id="pageIcon" fitHeight="48" fitWidth="48" preserveRatio="true"/>
            <Label text="Welcome Back" styleClass="page-title"/>
            <Label text="Sign in to continue" styleClass="hint-label"/>
        </VBox>

        <Region prefHeight="24"/>

        <!-- Form Fields -->
        <VBox spacing="12" maxWidth="300">
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-with-icon">
                <ImageView fx:id="userFieldIcon" fitHeight="18" fitWidth="18" preserveRatio="true"/>
                <TextField fx:id="usernameField" promptText="Username" prefHeight="44" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-with-icon">
                <ImageView fx:id="keyFieldIcon" fitHeight="18" fitWidth="18" preserveRatio="true"/>
                <PasswordField fx:id="passwordField" onAction="#handleLogin" promptText="Password" prefHeight="44" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <Region prefHeight="8"/>

        <!-- Buttons -->
        <VBox spacing="12" maxWidth="300">
            <Button fx:id="loginButton" onAction="#handleLogin" text="Sign In"
                    maxWidth="Infinity" prefHeight="44" styleClass="primary-button"/>
            <Button fx:id="backButton" onAction="#handleBackButtonAction" text="Back"
                    maxWidth="Infinity" prefHeight="40" styleClass="text-button"/>
        </VBox>

        <!-- Status -->
        <Label fx:id="statusLabel" styleClass="error-label" wrapText="true"/>
    </children>
</VBox>

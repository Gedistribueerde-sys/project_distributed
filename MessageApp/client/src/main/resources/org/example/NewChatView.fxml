<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="rootPane" spacing="16" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.NewChatController" styleClass="root"
      prefWidth="520.0">
    <padding>
        <Insets bottom="24" left="28" right="28" top="24"/>
    </padding>
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="12">
            <ImageView fx:id="headerIcon" fitHeight="32" fitWidth="32" preserveRatio="true"/>
            <VBox spacing="4">
                <Label text="New Conversation" styleClass="page-title"/>
                <Label text="Set up a secure chat with someone" styleClass="hint-label"/>
            </VBox>
        </HBox>

        <Separator/>

        <!-- Chat Name -->
        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fx:id="chatIcon" fitHeight="16" fitWidth="16" preserveRatio="true"/>
                <Label text="Chat Name" styleClass="field-label"/>
            </HBox>
            <TextField fx:id="chatNameField" promptText="Give this chat a name" prefHeight="42"/>
        </VBox>

        <Separator/>

        <!-- Send Key Section -->
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fx:id="keyIcon" fitHeight="16" fitWidth="16" preserveRatio="true"/>
                <VBox spacing="4">
                    <Label text="Your Send Key" styleClass="field-label"/>
                    <Label text="Generate a key and share it with your chat partner."
                           styleClass="hint-label" wrapText="true"/>
                </VBox>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="generateSendKeyButton" onAction="#handleGenerateSendKey"
                        styleClass="primary-button" prefHeight="36">
                    <graphic>
                        <ImageView fx:id="generateIcon" fitHeight="16" fitWidth="16" preserveRatio="true"/>
                    </graphic>
                    <text>Generate Key</text>
                </Button>
                <Button fx:id="copySendKeyButton" onAction="#handleCopySendKey" disable="true"
                        styleClass="copy-button" prefHeight="36">
                    <graphic>
                        <ImageView fx:id="copyIcon" fitHeight="16" fitWidth="16" preserveRatio="true"/>
                    </graphic>
                    <text>Copy</text>
                    <tooltip>
                        <Tooltip text="Copy key to clipboard"/>
                    </tooltip>
                </Button>
            </HBox>
            <TextArea fx:id="sendKeyDisplay" editable="false" wrapText="true" prefRowCount="2"
                      promptText="Click 'Generate Key' to create your send key" styleClass="code-area"/>
        </VBox>

        <Separator/>

        <!-- Receive Key Section -->
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fx:id="importIcon" fitHeight="16" fitWidth="16" preserveRatio="true"/>
                <VBox spacing="4">
                    <Label text="Partner's Key" styleClass="field-label"/>
                    <Label text="Paste the key you received from your chat partner."
                           styleClass="hint-label" wrapText="true"/>
                </VBox>
            </HBox>
            <TextArea fx:id="receiveKeyArea" promptText="Paste their key here (leave empty for send-only chat)"
                      wrapText="true" prefRowCount="2" styleClass="code-area"/>
        </VBox>

        <Region prefHeight="8"/>

        <Separator/>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER">
            <Button fx:id="createChatButton" onAction="#handleCreateChat"
                    maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="44" styleClass="primary-button">
                <graphic>
                    <ImageView fx:id="createIcon" fitHeight="18" fitWidth="18" preserveRatio="true"/>
                </graphic>
                <text>Create Chat</text>
            </Button>
            <Button fx:id="cancelButton" onAction="#handleCancel"
                    maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="44" styleClass="danger-button">
                <graphic>
                    <ImageView fx:id="cancelIcon" fitHeight="18" fitWidth="18" preserveRatio="true"/>
                </graphic>
                <text>Cancel</text>
            </Button>
        </HBox>
    </children>
</VBox>

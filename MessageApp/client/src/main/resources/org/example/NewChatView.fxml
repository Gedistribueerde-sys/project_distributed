<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="rootPane" spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.NewChatController" styleClass="root"
      prefWidth="480.0">
    <padding>
        <Insets bottom="24" left="24" right="24" top="24"/>
    </padding>
    <children>
        <Label text="Create New Chat" styleClass="title-label"/>
        
        <VBox spacing="6">
            <Label text="Chat Name" styleClass="title-label"/>
            <TextField fx:id="chatNameField" promptText="Enter a name for the chat"/>
        </VBox>
        
        <Separator/>

        <!-- Send Key Section -->
        <VBox spacing="6">
            <Label text="Generate Send Key" styleClass="title-label"/>
            <Label text="Click the button below to generate a key, then share it with your chat partner." 
                   styleClass="hint-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="generateSendKeyButton" text="Generate Send Key" onAction="#handleGenerateSendKey"/>
                <Button fx:id="copySendKeyButton" text="Copy Send Key" onAction="#handleCopySendKey" disable="true"/>
            </HBox>
            <TextArea fx:id="sendKeyDisplay" editable="false" wrapText="true" prefRowCount="3"
                      promptText="Generated send key will appear here" styleClass="state-view"/>
        </VBox>

        <Separator/>

        <!-- Receive Key Section -->
        <VBox spacing="6">
            <Label text="Paste Receive Key" styleClass="title-label"/>
            <Label text="Paste the key you received from your chat partner below."
                   styleClass="hint-label"/>
            <TextArea fx:id="receiveKeyArea" promptText="Paste the receive key here (optional for send-only chat)"
                      wrapText="true" prefRowCount="3" styleClass="state-view"/>
        </VBox>

        <Separator/>

        <HBox spacing="12" alignment="CENTER">
            <Button fx:id="createChatButton" text="Create Chat" onAction="#handleCreateChat" 
                    maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" id="logoutButton"
                    maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox fx:id="rootPane" spacing="16" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.NewChatController" styleClass="root"
      prefWidth="520.0">
    <padding>
        <Insets bottom="24" left="28" right="28" top="24"/>
    </padding>
    <children>
        <!-- Header -->
        <VBox alignment="CENTER_LEFT" spacing="4">
            <Label text="New Conversation" styleClass="title-label" style="-fx-font-size: 20px;"/>
            <Label text="Set up a secure chat with someone" styleClass="hint-label"/>
        </VBox>

        <Separator/>

        <!-- Chat Name -->
        <VBox spacing="8">
            <Label text="Chat Name" style="-fx-font-weight: 600;"/>
            <TextField fx:id="chatNameField" promptText="Give this chat a name" prefHeight="42"/>
        </VBox>

        <Separator/>

        <!-- Send Key Section -->
        <VBox spacing="10">
            <VBox spacing="4">
                <Label text="ðŸ“¤ Your Send Key" style="-fx-font-weight: 600;"/>
                <Label text="Generate a key and share it with your chat partner."
                       styleClass="hint-label" wrapText="true"/>
            </VBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="generateSendKeyButton" text="Generate Key" onAction="#handleGenerateSendKey"/>
                <Button fx:id="copySendKeyButton" text="ðŸ“‹ Copy" onAction="#handleCopySendKey" disable="true"
                        style="-fx-background-color: #23A559;"/>
            </HBox>
            <TextArea fx:id="sendKeyDisplay" editable="false" wrapText="true" prefRowCount="2"
                      promptText="Click 'Generate Key' to create your send key" styleClass="state-view"/>
        </VBox>

        <Separator/>

        <!-- Receive Key Section -->
        <VBox spacing="10">
            <VBox spacing="4">
                <Label text="ðŸ“¥ Partner's Key" style="-fx-font-weight: 600;"/>
                <Label text="Paste the key you received from your chat partner."
                       styleClass="hint-label" wrapText="true"/>
            </VBox>
            <TextArea fx:id="receiveKeyArea" promptText="Paste their key here (leave empty for send-only chat)"
                      wrapText="true" prefRowCount="2" styleClass="state-view"/>
        </VBox>

        <Region prefHeight="8"/>

        <Separator/>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER">
            <Button fx:id="createChatButton" text="Create Chat" onAction="#handleCreateChat"
                    maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="44"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                    maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="44"
                    style="-fx-background-color: transparent; -fx-border-color: #5C6370; -fx-border-width: 1; -fx-border-radius: 6; -fx-text-fill: #5C6370;"/>
        </HBox>
    </children>
</VBox>


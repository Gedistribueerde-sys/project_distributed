<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>

<SplitPane fx:id="splitPane" dividerPositions="0.28" prefHeight="650.0" prefWidth="1000.0"
           stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.ChatController">
    <items>
        <!-- Left Panel: Chat List -->
        <VBox fx:id="leftBox" prefWidth="280.0" styleClass="chat-list-pane" spacing="0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 16;">
                    <children>
                        <Label styleClass="title-label" text="ðŸ’¬ Chats"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>

                <Separator/>

                <!-- Chat List -->
                <ListView fx:id="chatList" VBox.vgrow="ALWAYS" style="-fx-padding: 8;"/>
            </children>
        </VBox>

        <!-- Right Panel: Messages -->
        <VBox fx:id="rightBox" spacing="0">
            <children>
                <!-- Top Bar with User Info -->
                <HBox alignment="CENTER_LEFT" styleClass="top-bar" spacing="12">
                    <children>
                        <Label fx:id="userLabel" styleClass="user-label" text="Logged in as: "/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="themeToggleButton" onAction="#handleThemeToggle" text="ðŸŒ“"/>
                        <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout"/>
                    </children>
                </HBox>

                <!-- Chat Header - shows current recipient -->
                <HBox fx:id="chatHeader" alignment="CENTER_LEFT" styleClass="chat-header" spacing="12" managed="false" visible="false">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <children>
                        <Label fx:id="recipientLabel" styleClass="recipient-label" text=""/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="connectionStatusLabel" styleClass="connection-status-label" text=""/>
                    </children>
                </HBox>

                <!-- Messages View -->
                <ListView fx:id="messagesView" styleClass="messages-view" VBox.vgrow="ALWAYS"/>

                <!-- Input Bar -->
                <HBox fx:id="inputBar" spacing="12" alignment="CENTER">
                    <padding>
                        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
                    </padding>
                    <children>
                        <TextField fx:id="messageField" onAction="#handleSend"
                                   promptText="Type a message..."
                                   styleClass="message-field" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendButton" text="Send" onAction="#handleSend"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </items>
</SplitPane>


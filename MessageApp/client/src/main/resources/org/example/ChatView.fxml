<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.3" prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ChatController">
    <items>
        <VBox fx:id="leftBox" prefWidth="250.0" styleClass="chat-list-pane" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label styleClass="title-label" text="Chats" />
                <ListView fx:id="chatList" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
        <VBox fx:id="rightBox" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" styleClass="top-bar" spacing="10">
                    <children>
                        <Label fx:id="userLabel" styleClass="user-label" text="Logged in as: " />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />
                                        <Button fx:id="themeToggleButton" onAction="#handleThemeToggle" text="Toggle Theme" />
                                    </children>
                                </HBox>
                                <TextArea fx:id="stateView" editable="false" prefRowCount="5" wrapText="true" styleClass="state-view" />
                                <ListView fx:id="messagesView" styleClass="messages-view" VBox.vgrow="ALWAYS" />
                                <HBox fx:id="inputBar" spacing="10">
                                    <children>
                                        <TextField fx:id="messageField" onAction="#handleSend" promptText="Type a message..." styleClass="message-field" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="sendButton" onAction="#handleSend" text="Send" />
                                        <Button fx:id="fetchButton" onAction="#handleFetch" text="Fetch" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        
    </items>
</SplitPane>
